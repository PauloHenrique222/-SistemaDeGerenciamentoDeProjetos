<div class="card form-center center-block">
  <h2 class="text-center title">Login</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <div class="form-group">
        <%= f.label :nome %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control"%>
    </div>

    <div class="form-group">
      <%= f.label :senha %>
      <%= f.password_field :password, autocomplete: "current-password", class:"form-control"%>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="checkbox-inline">
        <%= f.check_box :remember_me %>
        <%= f.label 'Mantenha-me conectado' %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Entrar", class:"btn btn-primary btn-block" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>

  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <%= link_to "Cadastre-se", new_registration_path(resource_name), class:"btn btn-success btn-block" %><br />
  <% end %>

</div>