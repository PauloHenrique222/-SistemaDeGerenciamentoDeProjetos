<!DOCTYPE html>
<html>
  <head>
    <title>Projetoibc</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
      <% if user_signed_in? %>
        <%= nav_bar brand: "Home", brand_link: root_url do %>
          <%= menu_group do %>
            <%= menu_item "Perfil", user_registration_path, method: :patch %>
          <% end %>
          <%= menu_group do %>
            <%= menu_item "Sair", destroy_user_session_path, method: :delete%>
          <% end %>
        <% end %>
      <% end %>

      <% if notice %>
        <p class="alert alert-success"><%= notice %></p>
      <% end %>
      <% if alert %>
        <p class="alert alert-danger"><%= alert %></p>
      <% end %>

      <%= yield %>
    </div>
  </body>
</html>
